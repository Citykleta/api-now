{
  "version": 2,
  "alias": "api.citykleta-test.com",
  "name": "citykleta-api",
  "env": {
    "MAPBOX_TOKEN": "@mapbox-token",
    "MAPBOX_USER": "@mapbox-user",
    "CORS_ORIGIN": "https://app.citykleta-test.com",
    "POSTGRES_DB": "@db-name",
    "POSTGRES_USER": "@db-user",
    "POSTGRES_PASSWORD": "@db-password",
    "POSTGRES_HOST": "@db-host"
  },
  "builds": [
    {
      "src": "src/api/**/*.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/search/poi",
      "dest": "src/api/locations/search.js",
      "methods": [
        "GET",
        "OPTIONS"
      ]
    },
    {
      "src": "/search/reverse",
      "dest": "src/api/locations/reverse.js",
      "methods": [
        "GET",
        "OPTIONS"
      ]
    },
    {
      "src": "/search/directions",
      "dest": "src/api/directions/search.js",
      "methods": [
        "POST",
        "OPTIONS"
      ]
    }
  ]
}
